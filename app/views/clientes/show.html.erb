<% @title = "Mostrar cliente" %>
<% @navbar = [link_to('<span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Clientes'.html_safe, clientes_path), @title] %>

<div class="table-responsive tblclient">
  <div>
    <%= link_to '<span class="print_link glyphicon glyphicon-print"></span>&nbsp;&nbsp;Imprimir cliente'.html_safe, 'javascript:window.print()', class: 'print' %>
  </div>
  <br />
  <h3 class="page-title">Datos del cliente</h3>
  <table class="table table-striped">
    <tr>
      <td><b>Nombre:</b></td>
      <td><%= @cliente.nombre_completo %></td>
    </tr>
    <tr>
      <td><b>Domicilio:</b></td>
      <td><%= @cliente.domicilio %></td>
    </tr>
    <tr>
      <td><b>Localidad:</b></td>
      <td><%= @cliente.localidad %></td>
    </tr>
    <tr>
      <td><b>Teléfono:</b></td>
      <td><%= @cliente.telefono %></td>
    </tr>
    <tr>
      <td><b>Correo electrónico:</b></td>
      <td><%= @cliente.correo_electronico %></td>
    </tr>
    <tr>
      <td><b>Observaciones:</b></td>
      <td><%= @cliente.observaciones %></td>
    </tr>
  </table>

  <div class="print_link">
    <%= link_to '<span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp;&nbsp;Volver atrás'.html_safe, clientes_path %>
    <%= link_to 'Editar cliente', edit_cliente_path(@cliente), :class => 'btn btn-warning pull-right' %>
  </div>
</div>
