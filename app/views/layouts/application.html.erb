<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
    "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="application/xhtml+xml; charset=utf-8"/>
  <%= stylesheet_link_tag 'application', :media => :screen %>
  <%= stylesheet_link_tag 'print', :media => :print %>
  <%= javascript_include_tag 'application' %>
  <%= calendar_date_select_includes :locale => :es %>
  <!--[if gte IE 5]>
    <%= stylesheet_link_tag "ie-fixes", :media => :screen %>
    <![endif]-->
  <title>
    <%=
        if @title then
          site_name + ' - ' + @title
        else
          site_name
        end
    %>
  </title>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="main">
    <div class="header">
      <div class="title"><h1><%= site_name %></h1></div>
    </div>
    <div class="navigation">
      <div style="float: left;">
        <ul class="navlist">
          <% if current_user -%>
            <li><%= link_to "Home", {:controller => :user} %></li>
          <% else -%>
            <li><%= link_to "Home", {:controller => :main} %></li>
          <% end -%>
          <% if @navbar then %>
            <% for item in @navbar -%>
              <li><%= item %></li>
            <% end -%>
          <%end%>
        </ul>
      </div>
      <div align="right">
        <% if current_user -%>
          <%= link_cierre_sesion %>
        <% else -%>
          &nbsp;
        <% end -%>
      </div>
    </div>
    <div class="sidenav">
      <h1>Clientes</h1>
      <ul>
        <li><%= link_to "Nuevo cliente",  new_cliente_path %></li>
        <li><%= link_to "Ver clientes",  clientes_path %></li>
        <li><%= link_to "Importar Ã³rdenes",  :controller => :main, :action => :import_ordenes_trabajo_file %></li>
      </ul>
    </div>
    <div class="content">
      <div class="title">
        <div style="float: left">
          <%= @title if @title %>
        </div>
        <div align="right" style="height: 16px">&nbsp;
          <%= image_tag("loading.gif", :id => "loader") %>
        </div>
      </div>
      <%= show_flash %>
      <div class="item">
        <%= yield %>
      </div>
    </div>
  </div>
  <div class="footer">
    <span class="left">&copy; 2007 Roberto Romero. Valid <a href="http://jigsaw.w3.org/css-validator/check/referer">CSS</a> &amp; <a href="http://validator.w3.org/check?uri=referer">XHTML</a></span>
  </div>
</div>
</body>
</html>
