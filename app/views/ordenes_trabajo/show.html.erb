  <div class="print_link">
    <%= link_to '<span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp;&nbsp;Volver atrás'.html_safe, cliente_ordenes_trabajo_path %>
    <%= link_to 'Editar órden de trabajo', edit_cliente_orden_trabajo_path(@cliente, @orden_trabajo), :class => 'btn btn-warning pull-right' %>
  </div>
