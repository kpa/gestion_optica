      <td><b>Fecha de actualización:</b></td>
      <td><%= @work_order.updated_at.to_date %></td>
    </tr>
    <tr>
      <td><b>Número de órden:</b></td>
      <td><%= @work_order.numero %></td>
    </tr>
    <tr>
      <td><b>Client:</b></td>
      <td><%= @work_order.client.nombre %></td>
    </tr>
    <tr>
      <td><b>Descripción:</b></td>
      <td><%= @work_order.descripcion %></td>
    </tr>
