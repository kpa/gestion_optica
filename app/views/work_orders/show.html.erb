      <td><b>Fecha:</b></td>
      <td><%= @work_order.fecha %></td>
    </tr>
    <tr>
      <td><b>Para el día:</b></td>
      <td><%= @work_order.fecha_entrega %></td>
    </tr>
    <tr>
      <td colspan="2"><br/>
        <hr/>
        <br/></td>
    </tr>
